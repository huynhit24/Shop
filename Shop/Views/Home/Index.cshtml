                                    }
                                    <a class="btn btn-sm btn-danger border-3" href=""><i class="fa fa-arrow-alt-circle-right"></i>  Xem tất cả</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        @foreach (var item in Model.GetListLaptop_LASTEST())
                        {
                            <!-- Product -->
                            <div class="col-lg-3 col-sm-6 my-3">
                                <div class="col-12 bg-white text-center h-100 product-item">
                                    <div class="row h-100">
                                        <div class="col-12 p-0 mb-3">
                                            <a href="@Url.Action( "Details", "Home", new { id = item.malaptop})">
                                                <img src="/Data/images/@item.hinh" class="img-fluid" style="width:200px;height:200px;" />
                                            </a>
                                        </div>
                                        <div class="col-12 mb-3">
                                            <a style="font-size:1rem;margin: 1rem;" href="@Url.Action( "Details", "Home", new { id = item.malaptop})" class="product-name">@item.tenlaptop</a>
                                        </div>
                                        <div class="col-12 mb-3">

                                            <div class="row">
                                                <div class="col-6">
                                                    <div>
                                                        <small>
                                                            <i class="fas fa-star" style="color: #ed0fef"></i>
                                                            <i class="fas fa-star" style="color: #ed0fef"></i>
                                                            <i class="fas fa-star" style="color: #ed0fef"></i>
                                                            <i class="far fa-star" style="color: #ed0fef"></i>
                                                            <i class="far fa-star" style="color: #ed0fef"></i>
                                                        </small>
                                                    </div>
                                                    <div class="product-description">
                                                        3 đánh giá
                                                    </div>
                                                </div>
                                                <div class="col-6">
                                                    <span class="product-price-old">

                                                    </span>
                                                    <br>
                                                    <span class="product-price" style="font-size:1rem;margin: 1rem;color: red;">
                                                        @String.Format("{0:0,0}", item.giaban) đ
                                                    </span>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="col-12 mb-3 align-self-end">
                                            <a href="@Url.Action( "Details", "Home", new { id = item.malaptop})" class="btn btn-sm btn-primary"><i class="fas fa-eye me-2"></i>Xem chi tiết</a>
                                            <a href="@Url.Action("ThemGioHang", "GioHang", new { @id = item.malaptop, @strURL = Request.Url.ToString() })" class="btn btn-sm btn-outline-dark mua" onclick="Swal.fire({ position: 'center', icon: 'success', title: 'Đã thêm vào giỏ hàng!', showConfirmButton: false });"><i class="fas fa-cart-plus me-2"></i>Thêm vào giỏ</a>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <!-- Product -->
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- Latest Products -->

        <div class="col-12">
            <hr>
        </div>

        <!-- Top Selling Products -->
        <div class="col-12">
            <div class="row">
                <div class="col-12 py-3">
                    <div class="row">
                        <div class="col-12 text-center text-uppercase">
                            <div class="row pull-left">
                                <div class="row pull-left">
                                    <div class="col-6" style="text-align: left;">
                                        <h2>LAPTOP GIÁ RẺ (<= 15Tr VNĐ)</h2>
                                    </div>
                                    <div class="col-6" style="text-align: right;">
                                        @foreach (var hangItem in home.GetListHang_Num(2))
                                        {
                                            <a class="btn btn-sm btn-outline-success border-3" href="@Url.Action("ListLaptopTheoHangId","Home", new { id = hangItem.mahang})"> @hangItem.tenhang</a>
                                        }
                                        @foreach (var nhucauItem in home.GetListNhuCau_Num(2))
                                        {
                                            <a class="btn btn-sm btn-outline-success border-3" href="@Url.Action("ListLaptopTheoNhuCauById","Home", new { id = nhucauItem.manhucau})"> @nhucauItem.tennhucau</a>
                                        }
                                        <a class="btn btn-sm btn-danger border-3" href=""><i class="fa fa-arrow-alt-circle-right"></i>  Xem tất cả</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        @foreach (var item in Model.GetListLaptop_TOPSELLING())
                        {
                            <!-- Product -->
                            <div class="col-lg-3 col-sm-6 my-3">
                                <div class="col-12 bg-white text-center h-100 product-item">
                                    <div class="row h-100">
                                        <div class="col-12 p-0 mb-3">
                                            <a href="@Url.Action( "Details", "Home", new { id = item.malaptop})">
                                                <img src="/Data/images/@item.hinh" class="img-fluid" style="width:200px;height:200px;" />
                                            </a>
                                        </div>
                                        <div class="col-12 mb-3">
                                            <a style="font-size:1rem;margin: 1rem;" href="@Url.Action( "Details", "Home", new { id = item.malaptop})" class="product-name">@item.tenlaptop</a>
                                        </div>
                                        <div class="col-12 mb-3">

                                            <div class="row">
                                                <div class="col-6">
                                                    <div>
