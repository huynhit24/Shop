                                                            <i class="fas fa-star" style="color: #ed0fef"></i>
                                                            <i class="far fa-star" style="color: #ed0fef"></i>
                                                            <i class="far fa-star" style="color: #ed0fef"></i>
                                                        </small>
                                                    </div>
                                                    <div class="product-description">
                                                        3 đánh giá
                                                    </div>
                                                </div>
                                                <div class="col-6">
                                                    <span class="product-price-old">

                                                    </span>
                                                    <br>
                                                    <span class="product-price" style="font-size:1rem;margin: 1rem;color: red;">
                                                        @String.Format("{0:0,0}", item.giaban) đ
                                                    </span>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="col-12 mb-3 align-self-end">
                                            <a href="@Url.Action( "Details", "Home", new { id = item.malaptop})" class="btn btn-sm btn-warning"><i class="fas fa-eye me-2"></i>Xem chi tiết</a>
                                            <a href="@Url.Action("ThemGioHang", "GioHang", new { @id = item.malaptop, @strURL = Request.Url.ToString() })" class="btn btn-sm btn-outline-danger mua" onclick="Swal.fire({ position: 'center', icon: 'success', title: 'Đã thêm vào giỏ hàng!', showConfirmButton: false });"><i class="fas fa-cart-plus me-2"></i>Thêm vào giỏ</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Product -->
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- Top Selling Products -->



    </div>

    <div class="col-12 py-3 d-sm-block d-none" style="background-color:#f5e31a;">
        <div class="row">
            <div class="col-lg-3 col ms-auto large-holder">
                <div class="row">
                    <div class="col-auto ms-auto large-icon">
                        <i class="fas fa-money-bill"></i>
                    </div>
                    <div class="col-auto me-auto large-text">
                        Giá tốt nhất
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col large-holder">
                <div class="row">
                    <div class="col-auto ms-auto large-icon">
                        <i class="fas fa-truck-moving"></i>
                    </div>
                    <div class="col-auto me-auto large-text">
                        Chuyển phát nhanh
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col me-auto large-holder">
                <div class="row">
                    <div class="col-auto ms-auto large-icon">
                        <i class="fas fa-check"></i>
                    </div>
                    <div class="col-auto me-auto large-text">
                        Sản phẩm chính hãng
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>





