                                        <div class="item-product__sticker-percent">
                                            <p class="text-white">Nổi bật</p>
                                        </div>
                                        <div class="col-12 p-0 mb-3">
                                            <a href="@Url.Action( "Details", "Home", new { id = item.malaptop, postName = StringHelpers.SeoLink(item.tenlaptop).ToLower() })">
                                                <img src="/Data/images/@item.hinh" class="img-fluid" style="width:200px;height:200px;">
                                            </a>
                                        </div>
                                        <div class="col-12 mb-3">
                                            <a style="font-size:1rem;margin: 1rem;" href="@Url.Action( "Details", "Home", new { id = item.malaptop, postName = StringHelpers.SeoLink(item.tenlaptop).ToLower() })" class="product-name">@item.tenlaptop</a>
                                        </div>
                                        <div class="col-12 mb-3">


                                            <div class="row">
                                                <div class="col-6">
                                                    <div>
