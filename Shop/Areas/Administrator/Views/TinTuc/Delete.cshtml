@model Shop.EF.TinTuc

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Administrator/Views/Shared/_LayoutAdministrator.cshtml";
}

<div class="container-sm container-fluid">
    <div class="p-5" style="background-color: white">
        <h2>Xóa bài viết</h2>

        <h3>Bạn có muốn xóa bài viết này?</h3>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("Tên chủ đề")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ChuDe.tenchude)
                </dd>

                <dt>
                    @Html.DisplayName("Tiêu đề bài viết")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.tieude)
                </dd>

                <dt>
                    @Html.DisplayName("Hình nền")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.hinhnen)
                </dd>

                <dt>
                    @Html.DisplayName("Tóm tắt")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.tomtat)
                </dd>

                <dt>
                    @Html.DisplayName("Slug")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.slug)
                </dd>

                <dt>
                    @Html.DisplayName("Lượt xem")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.luotxem)
                </dd>

                <dt>
                    @Html.DisplayName("Ngày cập nhật")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ngaycapnhat)
                </dd>

                <dt>
                    @Html.DisplayName("Xuât bản")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.xuatban)
                </dd>

                <dt>
                    @Html.DisplayName("Nội dung")
                </dt>

                <dd>
                    @Html.Raw(Model.noidung.ToString())
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Xóa bỏ" class="btn btn-danger" /> |
                    @Html.ActionLink("Quay lại", "Index", "TinTuc")
                </div>
            }
        </div>
    </div>
</div>