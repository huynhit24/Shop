                    @using (Html.BeginForm("LoginAdmin", "MainPage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        <h2 class="form-title">Đặng nhập</h2>
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">

                            <label for="your_name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input type="text" name="Email" id="your_name" placeholder="Tên đăng nhập" />
                            @*@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })*@
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">

                            <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                            <input type="password" name="Password" id="your_pass" placeholder="Mật khẩu" />
                            @*@Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "your_pass" })*@
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                        </div>
                        <h4 style="color:red;text-align:center">@ViewBag.ThongBao</h4>
                        <div class="form-group form-button">

                            <input type="submit" value="Đăng nhập" name="signin" id="signin" class="form-submit" />

                        </div>
                        @* <p>
                                @Html.ActionLink("Đăng ký tài khoản mới", "Register","Account",new { @class = "btn btn-outline-warning"})
                            </p>*@
                        @* Enable this once you have account confirmation enabled for password reset functionality
                            <p>
                                @Html.ActionLink("Forgot your password?", "ForgotPassword")
                            </p>*@
                    }
                </div>
            </div>
        </section>

    </div>

    <!-- JS -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="js/main.js"></script>
