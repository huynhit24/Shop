    <!-- Main css -->
    @*<link rel="stylesheet" href="css/style.css">*@
    <link href="~/Areas/Administrator/Data/dist/css/style.css" rel="stylesheet" />
</head>
<body>

    <div class="main">
        <!-- Sing in  Form -->
        <section class="sign-in">
            <div class="container">
                <div class="signin-content" style="padding-top:100px">
                    <div class="signin-image">
                        <figure>
                            <img src="~/Content/images/hacker.png" />
                        </figure>
                    </div>

                    @*<div class="signin-form" style="padding-top:30px">
